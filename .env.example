# Ejemplo de archivo de variables de entorno
# Copiar a .env y completar con valores reales

# Credenciales de AWS para la cuenta de Operaciones
AWS_ACCESS_KEY_ID_OPERACIONES=your_access_key_here
AWS_SECRET_ACCESS_KEY_OPERACIONES=your_secret_key_here

# Credenciales de AWS para la cuenta de Dev
AWS_ACCESS_KEY_ID_DEV=your_access_key_here
AWS_SECRET_ACCESS_KEY_DEV=your_secret_key_here

# Credenciales de AWS para la cuenta de Stage
AWS_ACCESS_KEY_ID_STAGE=your_access_key_here
AWS_SECRET_ACCESS_KEY_STAGE=your_secret_key_here

# Credenciales de AWS para la cuenta de Prod
AWS_ACCESS_KEY_ID_PROD=your_access_key_here
AWS_SECRET_ACCESS_KEY_PROD=your_secret_key_here

# Región de AWS
AWS_REGION=us-east-1

# IDs de cuentas AWS
OPERACIONES_ACCOUNT_ID=000000000000
DEV_ACCOUNT_ID=111111111111
STAGE_ACCOUNT_ID=222222222222
PROD_ACCOUNT_ID=333333333333

# Nombres de cuentas
ACCOUNT_NAME_DEV=dev
ACCOUNT_NAME_STAGE=stage
ACCOUNT_NAME_PROD=prod
ACCOUNT_NAME_OPERACIONES=operaciones

# CIDRs para VPCs
VPC_CIDR_OPERACIONES_DEV=10.0.0.0/16
VPC_CIDR_OPERACIONES_STAGE=10.1.0.0/16
VPC_CIDR_OPERACIONES_PROD=10.2.0.0/16
VPC_CIDR_DEV=10.10.0.0/16
VPC_CIDR_STAGE=10.20.0.0/16
VPC_CIDR_PROD=10.30.0.0/16

# Zonas de disponibilidad - Para las pruebas
AVAILABILITY_ZONES='us-east-1a,us-east-1b'
# Las zonas de disponibilidad para el deployment real se encuentran en los scripts run_terraform_plan_profiles.sh, run_terraform_apply_profiles.sh y 
# run_terraform_destroy.sh

# Configuración de Directory Service
DIRECTORY_NAME_DEV=dev.local
DIRECTORY_NAME_STAGE=stage.local
DIRECTORY_NAME_PROD=prod.local
DIRECTORY_PASSWORD=YourStrongPasswordHere!

# Nombres de VPCs
VPC_NAME_DEV=VPC-DEV
VPC_NAME_STAGE=VPC-STAGE
VPC_NAME_PROD=VPC-PROD
VPC_NAME_OPERACIONES=VPC-OPERACIONES

# Nombres de subredes
SUBNET_NAME_DEV=Subnet-DEV
SUBNET_NAME_STAGE=Subnet-STAGE
SUBNET_NAME_PROD=Subnet-PROD
SUBNET_NAME_OPERACIONES=Subnet-OPERACIONES

# Nombres de Internet Gateways
IGW_NAME_DEV=igw-dev
IGW_NAME_STAGE=igw-stage
IGW_NAME_PROD=igw-prod
IGW_NAME_OPERACIONES_DEV=igw-operaciones-dev
IGW_NAME_OPERACIONES_STAGE=igw-operaciones-stage
IGW_NAME_OPERACIONES_PROD=igw-operaciones-prod

# Nombres de NAT Gateways
NATGW_NAME_DEV=nat-dev
NATGW_NAME_STAGE=nat-stage
NATGW_NAME_PROD=nat-prod
NATGW_NAME_OPERACIONES_DEV=nat-operaciones-dev
NATGW_NAME_OPERACIONES_STAGE=nat-operaciones-stage
NATGW_NAME_OPERACIONES_PROD=nat-operaciones-prod

# Nombres de Elastic IPs
EIP_NAME_DEV=eip-nat-dev
EIP_NAME_STAGE=eip-nat-stage
EIP_NAME_PROD=eip-nat-prod
EIP_NAME_OPERACIONES_DEV=eip-nat-operaciones-dev
EIP_NAME_OPERACIONES_STAGE=eip-nat-operaciones-stage
EIP_NAME_OPERACIONES_PROD=eip-nat-operaciones-prod

# Nombres de Security Groups
SG_DIRECTORY_NAME_DEV=sg-directory-dev
SG_DIRECTORY_NAME_STAGE=sg-directory-stage
SG_DIRECTORY_NAME_PROD=sg-directory-prod

# Configuración de Transit Gateway
TGW_NAME=tgw-multi-account
TGW_DESCRIPTION=Transit Gateway para conectar las VPCs

# Nombres de Transit Gateway Attachments
TGW_ATTACHMENT_NAME_DEV=tgw-attachment-dev
TGW_ATTACHMENT_NAME_STAGE=tgw-attachment-stage
TGW_ATTACHMENT_NAME_PROD=tgw-attachment-prod
TGW_ATTACHMENT_NAME_OPERACIONES_DEV=tgw-attachment-operaciones-dev
TGW_ATTACHMENT_NAME_OPERACIONES_STAGE=tgw-attachment-operaciones-stage
TGW_ATTACHMENT_NAME_OPERACIONES_PROD=tgw-attachment-operaciones-prod

# Nombres de tablas de ruteo
RT_NAME_DEV_PUBLIC=rt-dev-public
RT_NAME_DEV_PRIVATE=rt-dev-private
RT_NAME_STAGE_PUBLIC=rt-stage-public
RT_NAME_STAGE_PRIVATE=rt-stage-private
RT_NAME_PROD_PUBLIC=rt-prod-public
RT_NAME_PROD_PRIVATE=rt-prod-private
RT_NAME_OPERACIONES_DEV_PUBLIC=rt-operaciones-dev-public
RT_NAME_OPERACIONES_DEV_PRIVATE=rt-operaciones-dev-private
RT_NAME_OPERACIONES_STAGE_PUBLIC=rt-operaciones-stage-public
RT_NAME_OPERACIONES_STAGE_PRIVATE=rt-operaciones-stage-private
RT_NAME_OPERACIONES_PROD_PUBLIC=rt-operaciones-prod-public
RT_NAME_OPERACIONES_PROD_PRIVATE=rt-operaciones-prod-private

# Nombre de RAM Share
RAM_SHARE_NAME=tgw-share
